{
  "name": "lbdluxe",
  "version": "0.4.0",
  "description": "A monorepo template built with Bun, Hono, Vite, and React",
  "author": "Steve Simkins",
  "license": "MIT",
  "homepage": "https://github.com/stevedylandev/bhvr",
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "./server",
    "./client",
    "./shared"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:client": "turbo dev --filter=client",
    "dev:server": "turbo dev --filter=server",
    "build": "turbo build",
    "build:client": "turbo build --filter=client",
    "build:server": "turbo build --filter=server",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "postinstall": "turbo build --filter=shared --filter=server",
    "deploy": "turbo build && wrangler deploy --minify"
  },
  "keywords": [
    "bun",
    "hono",
    "react",
    "vite",
    "monorepo",
    "turbo"
  ],
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250919.0",
    "bun-types": "latest",
    "tsx": "^4.20.5",
    "turbo": "^2.5.8",
    "wrangler": "^4.38.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@tiptap/extension-highlight": "^3.7.1",
    "@tiptap/extension-link": "^3.7.1",
    "@tiptap/extension-strike": "^3.7.1",
    "@tiptap/extension-underline": "^3.7.1",
    "dotenv": "^17.2.2",
    "hono": "^4.9.8"
  }
}
